{
    "name": "neuland.app-backend",
    "module": "index.ts",
    "type": "module",
    "scripts": {
        "start": "bun run index.ts",
        "dev": "bun --hot run index.ts",
        "prepare": "husky",
        "docs": "concurrently --kill-others --success first \"cross-env PORT=4321 bun run start\" \"bunx spectaql ./documentation/config.yml\"",
        "drizzle-kit": "drizzle-kit generate --schema ./src/db/schema/ --dialect postgresql --out ./src/db/migrations",
        "migrate": "bun run ./src/db/migrate.ts"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@apollo/server": "^4.11.0",
        "axios": "^1.7.7",
        "cheerio": "^1.0.0",
        "deepl": "^1.0.13",
        "drizzle-orm": "^0.34.1",
        "fetch-cookie": "^3.0.1",
        "graphql": "^16.9.0",
        "graphql-scalars": "^1.23.0",
        "graphql-tag": "^2.12.6",
        "jsonwebtoken": "^9.0.2",
        "jwk-to-pem": "^2.0.6",
        "moment": "^2.30.1",
        "moment-timezone": "^0.5.46",
        "node-cache": "^5.1.2",
        "object-hash": "^3.0.0",
        "pdf-parse": "https://github.com/neuland-ingolstadt/pdf-parse.git",
        "postgres": "^3.4.4",
        "sanitize-html": "^2.13.1",
        "xml-js": "^1.6.11"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.1.0",
        "@eslint/js": "^9.12.0",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/bun": "^1.1.11",
        "@types/cors": "^2.8.17",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/jwk-to-pem": "^2.0.3",
        "@types/node": "^22.7.5",
        "@types/object-hash": "^3.0.6",
        "@types/pdf-parse": "^1.1.4",
        "@types/sanitize-html": "^2.13.0",
        "@typescript-eslint/eslint-plugin": "^8.8.1",
        "concurrently": "^9.0.1",
        "cross-env": "^7.0.3",
        "drizzle-kit": "^0.25.0",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^9.1.0",
        "globals": "^15.11.0",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "prettier": "^3.3.3",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.8.1"
    },
    "lint-staged": {
        "**/*.{gql,graphql}": [
            "bun docs",
            "git add documentation/generated"
        ],
        "**/*.{js,jsx,ts,tsx}": [
            "bunx eslint --fix"
        ],
        "**/*.{js,jsx,ts,tsx,json,yml,gql,graphql,md}": [
            "bunx prettier --write"
        ]
    }
}
